<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.QuickBiteManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowBackground">@color/white</item>


    </style>

    <style name="ThemeButtom" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
        <item name="iconTint">@color/white</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.QuickBiteManager</item>
    </style>

    <style name="ic_color" >
        <item name="android:tint">@color/black</item>
    </style>
</resources>